      #orders.orders.setting.setting--2
        h1 Orders overview
        .orders_wraper
          if orders 
            each order in orders
              .order(class=`${order.isComplet ? 'recived' : 'pend'}`)
                .order_number=order.orderNum
                .order_status=`${order.isComplet ? 'recived' : 'pendeng'}`
                each p in order.products
                  .order_price= p.price + '€'  
      #favourite-products.favourite_products.setting.setting--3
        h1 Your favourite
        .list_prod
          ul.products--list
            each fav in favorite
              li.prod
                a.prod--name
                  img(src=`/img/products/${fav.product.images[0]}` )
                  span= fav.product.title
                .controls
                  span.delete--prode.delete_fav(data-fav=`${fav.id}`) Delete