            <li class="prod">
              <div class="product_info">
                <a href="/product/<%= fav.product.id %>" class="product_link">
                  <img src="/img/products/<%= fav.product.images[0] %>" />
                </a>
                <div class="prod_desc">
                   <a href="#" class="product_link">
                <%= fav.product.title %>
                </a>
                <p class="product_price"> 
                <%= fav.product.price %>
                  <span class="currency">$</span>
                </p>
                </div> 
              </div>
                <div class="controls">
                  <a href="#" class="add_to_cart primary_button">Add to cart</a>
                  <a  href="#" data-fav="<%= fav.id%>">
                   <span class="delete--prode delete_fav" >
                    Delete
                  </span>
                  </a>     
