    <div class="orders setting setting--2" id="orders">
      <h1>Orders overview</h1>
      <div class="orders_wraper">
        <div class="table100">
          <table>
            <thead>
              <tr class="table100-head">
                <th class="column2">Order N°</th>
                <th class="column3">Name</th>
                <th class="column4">Price</th>
                <th class="column5">Quantity</th>
                <th class="column7">Status</th>
              </tr>
            </thead>
            <tbody>
              <% if(orders) { %> 
              <%  orders.map( (o) => { %>
              <tr>
                <td class="column2"><%= o.orderNum %></td>
                <td class="column3"><%= o.item.title %></td>
                <td class="column4"><%= o.item.price %></td>
                <td class="column5"><%= o.quantity %></td>
                <td class="column7">
                  <span class="<%= `${o.isComplet == 'true' ? 'completed_order' : 'pending_order'}`  %>"> <%= `${o.isComplet == 'true' ? 'Completed' : 'Pending'}`  %></span>
                </td>
              </tr>
              <% }) %> 
              <% } %> 
            </tbody>
          </table>
        </div>
      </div>
